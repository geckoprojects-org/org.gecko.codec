Bundle-Name: Gecko Codec Test Templates
Bundle-Description: Test templates for Gecko Codec 

-includeresource: resources
-resourceonly: true
 
category: ccc/Gecko OSGi Standard Templates
category-launch: ccc/Gecko bndrun Templates

dataurl: data:image/gif;base64

gecko-icon: ${dataurl},${base64;icons/gecko.ico}
 
project-template-codec-test:\
	org.bndtools.template; org.bndtools.template=project;\
		name=Gecko Codec Tests;\
		category=${category};\
		ranking:Double=1001;\
		dir=templates/codec-test;\
		icon="${gecko-icon}";\
		help=codec-test-help.xml;\
		engine=mustache;\
		metaType=codec-test-metatype.xml;\
		collect=geckoEMF
 
Provide-Capability: \
	${project-template-codec-test}