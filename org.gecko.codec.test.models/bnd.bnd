-buildpath :\
	org.osgi.service.condition

# sets the usually required buildpath using the bnd library, you can extend it with the normal -buildpath to your liking
-library: enable-emf

# The code generation takes a bit of time and makes the build a bit slower.
# It might be a good idea to put comments around it, when you don't need it
-generate:\
	model/codec-test.genmodel;\
		generate=geckoEMF;\
		genmodel=model/codec-test.genmodel;\
		output=src,\
	model/annotations.genmodel;\
		generate=geckoEMF;\
		genmodel=model/annotations.genmodel;\
		output=src,\
	model/generics.genmodel;\
		generate=geckoEMF;\
		genmodel=model/generics.genmodel;\
		output=src,\
	model/model.genmodel;\
		generate=geckoEMF;\
		genmodel=model/model.genmodel;\
		output=src,\
	model/array.genmodel;\
		generate=geckoEMF;\
		genmodel=model/array.genmodel;\
		output=src,\
	model/packageAnnotations.genmodel;\
		generate=geckoEMF;\
		genmodel=model/packageAnnotations.genmodel;\
		output=src
# Add this attribute to find some logging information
#		logfile=test.log;\

# If this is not done with a instruction namespace, bnd would think you like
# to take full control over whats exported and imported and will ignore @Export
# Bundle Annotations		
-includeresource.model: model=model

Bundle-Version: 1.0.0.SNAPSHOT
Bundle-Name: Gecko Codec Test Models
Bundle-Description: Test Ecore Models used for testing